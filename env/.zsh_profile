addToPath() {
    if [[ "$PATH" != *"1"* ]]; then
        export PATH=$PATH:$1
    fi
}

addToPathFront() {
    if [[ "$PATH" != *"$1"* ]]; then
        export PATH=$1:$PATH
    fi
}

addToPathFront $HOME/.local/go/bin
addToPathFront $HOME/.cargo/bin
addToPathFront $HOME/.local/scripts
