{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        // C++ build tasks
        {
            "label": "compile",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-o",
                "${fileBasenameNoExtension}",
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": false,
            }
        },
        {
            "label": "compile and run",
            "type": "shell",
            "command": "g++ -o ${fileBasenameNoExtension} ${file} && ./${fileBasenameNoExtension} < ${workspaceFolder}/.vscode/input.txt > ${workspaceFolder}/.vscode/output.txt && rm ${fileBasenameNoExtension}",
            "group": {
                "kind": "build",
                "isDefault": true,
            },
            "presentation": {
                "reveal": "never",
                "panel": "shared",
                "clear": true,
            }
        },

    ]
}
